---
interface Props {
  title: string;
  href: string;
  icon: string;
  color?: 'blue' | 'purple' | 'green' | 'orange' | 'cyan' | 'magenta';
}

const { title, href, icon, color = 'blue' } = Astro.props;

const colorMap = {
  blue: { hue: 220, sat: 70 },
  purple: { hue: 265, sat: 60 },
  green: { hue: 155, sat: 55 },
  orange: { hue: 25, sat: 75 },
  cyan: { hue: 195, sat: 70 },
  magenta: { hue: 330, sat: 55 },
};

const colorConfig = colorMap[color];
---

<a href={href} class="action-card" style={`--card-hue: ${colorConfig.hue}; --card-sat: ${colorConfig.sat}%`}>
  <div class="action-card-inner">
    <div class="action-icon-wrap">
      <span class="action-icon">{icon}</span>
    </div>
    <div class="action-content">
      <h4 class="action-title">{title}</h4>
      <p class="action-desc"><slot /></p>
    </div>
    <div class="action-arrow">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </div>
  </div>
  <div class="action-card-border"></div>
</a>

<style>
  .action-card {
    --card-hue: 220;
    --card-sat: 70%;
    position: relative;
    display: block;
    text-decoration: none;
    border-radius: var(--radius-md, 10px);
  }

  /* Inner content */
  .action-card-inner {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: var(--surface-2, #10131a);
    border: 1px solid var(--border-default, rgba(140, 155, 175, 0.12));
    border-radius: var(--radius-md, 10px);
    transition:
      border-color 0.25s cubic-bezier(0.4, 0, 0.2, 1),
      background 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .action-card:hover .action-card-inner {
    border-color: hsla(var(--card-hue), var(--card-sat), 56%, 0.3);
    background: var(--surface-3, #151922);
  }

  /* Gradient border */
  .action-card-border {
    position: absolute;
    inset: 0;
    border-radius: var(--radius-md, 10px);
    padding: 1px;
    background: linear-gradient(
      135deg,
      hsla(var(--card-hue), var(--card-sat), 56%, 0.4) 0%,
      hsla(calc(var(--card-hue) + 40), var(--card-sat), 56%, 0.2) 100%
    );
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    z-index: 1;
  }

  .action-card:hover .action-card-border {
    opacity: 1;
  }

  /* Icon */
  .action-icon-wrap {
    position: relative;
    flex-shrink: 0;
  }

  .action-icon {
    font-size: 1.5rem;
    display: block;
    filter: drop-shadow(0 0 6px hsla(var(--card-hue), var(--card-sat), 50%, 0.25));
    transition: transform 0.25s ease, filter 0.25s ease;
  }

  .action-card:hover .action-icon {
    transform: scale(1.1);
    filter: drop-shadow(0 0 8px hsla(var(--card-hue), var(--card-sat), 50%, 0.4));
  }

  /* Content */
  .action-content {
    flex-grow: 1;
    min-width: 0;
  }

  .action-title {
    font-family: var(--sl-font-mono, 'IBM Plex Mono', monospace);
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--sl-color-text, #e8edf4);
    margin: 0 0 0.2rem 0;
    letter-spacing: -0.005em;
    transition: color 0.25s ease;
  }

  .action-card:hover .action-title {
    color: hsl(var(--card-hue), calc(var(--card-sat) + 10%), 75%);
  }

  .action-desc {
    font-size: 0.8125rem;
    color: var(--text-secondary, rgba(200, 210, 225, 0.65));
    margin: 0;
    line-height: 1.45;
  }

  /* Arrow */
  .action-arrow {
    flex-shrink: 0;
    color: var(--text-tertiary, rgba(160, 175, 195, 0.5));
    transition: all 0.25s ease;
  }

  .action-card:hover .action-arrow {
    color: hsl(var(--card-hue), calc(var(--card-sat) - 5%), 62%);
    transform: translateX(3px);
  }

  /* Light theme */
  :global(:root[data-theme='light']) .action-card-inner {
    background: var(--surface-1, #ffffff);
    border-color: var(--border-default, rgba(0, 20, 50, 0.1));
  }

  :global(:root[data-theme='light']) .action-card:hover .action-card-inner {
    background: var(--surface-2, #f8f9fb);
  }

  :global(:root[data-theme='light']) .action-title {
    color: var(--sl-color-text, #1a1f28);
  }

  :global(:root[data-theme='light']) .action-card:hover .action-title {
    color: hsl(var(--card-hue), calc(var(--card-sat) - 10%), 40%);
  }

  :global(:root[data-theme='light']) .action-desc {
    color: var(--text-secondary, rgba(30, 40, 60, 0.65));
  }

  :global(:root[data-theme='light']) .action-arrow {
    color: var(--text-tertiary, rgba(60, 75, 100, 0.45));
  }

  :global(:root[data-theme='light']) .action-card:hover .action-arrow {
    color: hsl(var(--card-hue), calc(var(--card-sat) - 15%), 45%);
  }
</style>
